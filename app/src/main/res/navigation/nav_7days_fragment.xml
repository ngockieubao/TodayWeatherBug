<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_7days_fragment"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.todayweather.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_sevenDaysFragment"
            app:destination="@id/sevenDaysFragment"
            app:popUpTo="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/sevenDaysFragment"
        android:name="com.example.todayweather.SevenDaysFragment"
        android:label="fragment_seven_days"
        tools:layout="@layout/fragment_seven_days" >
        <action
            android:id="@+id/action_sevenDaysFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>