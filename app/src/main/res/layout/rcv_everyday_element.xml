<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/corner_layout"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp"
        android:weightSum="6">

        <TextView
            android:id="@+id/tv_recyclerView_everyday_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="5dp" />

        <TextView
            android:id="@+id/tv_recyclerView_everyday_humidity"
            style="@style/txt_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/imgView_ic_status_home_rcv_everyday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            app:srcCompat="@mipmap/ic_cloud" />

        <TextView
            android:id="@+id/tv_recyclerView_everyday_windSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="5dp" />

        <ImageView
            android:id="@+id/imgView_ic_windSpeed_home_rcv_everyday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            app:srcCompat="@mipmap/ic_uchiha_eyes_24" />

        <TextView
            android:id="@+id/tv_recyclerView_everyday_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="5dp" />
    </LinearLayout>
</layout>